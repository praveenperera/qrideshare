%h1 Start Conversation
.row.msgs-panel
	.col-md-10
		.panel.panel-default
			.panel-body
				.row
					.col-md-12.full-box
						.row.row-eq-height
							=render partial: 'messages/partials/leftmenu', :locals => { :box => 'inbox' }    
							.col-md-9.right-side
								.right-side-list.new-message
									= bootstrap_form_for :conversation, url: :conversations do |f|
										= f.hidden_field :recipients, value: @msg_to
										= f.text_field :subject
										= f.text_area :body, :rows => "20", as: :text
										.form-actions
											= f.button :Send, class: 'btn btn-primary'
											= link_to t('.cancel', :default => t("helpers.links.cancel")), conversations_path, :class => 'btn btn-default'


