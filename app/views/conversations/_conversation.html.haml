= content_tag_for(:li, conversation.receipts_for(current_user)) do |receipt|
  - message = receipt.message
  %p= message.sender.name
  %p= message.subject
  %p= message.created_at.strftime("%b #{message.created_at.day.ordinalize}, %Y")
  %p= truncate message.body, length: 350









