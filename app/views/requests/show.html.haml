- model_class = Request
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = @request.user_id
%p
  %strong= model_class.human_attribute_name(:ride_id) + ':'
  %br
  = @request.ride_id
%p
  %strong= model_class.human_attribute_name(:passenger) + ':'
  %br
  = @request.passenger
%p
  %strong= model_class.human_attribute_name(:ignore) + ':'
  %br
  = @request.ignore


= link_to t('.back', :default => t("helpers.links.back")), requests_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_request_path(@request), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), request_path(@request), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
